<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/backgroundApp">

  <TextView
    android:id="@+id/textView"
    style="@style/filterTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="31dp"
    android:text="Filter options"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
    android:id="@+id/ib_close_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="44dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/ic_close_button_filter_background"
    android:src="@drawable/ic_close_button_filter"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@color/baseWhite" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/bacground_done_button_filter"
    android:fontFamily="@font/markpro_medium"
    android:paddingStart="21dp"
    android:paddingTop="7dp"
    android:paddingEnd="19dp"
    android:paddingBottom="7dp"
    android:text="Done"
    android:textColor="@color/baseWhite"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    style="@style/filterTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="42dp"
    android:text="Brand"
    app:layout_constraintStart_toStartOf="@+id/ib_close_button"
    app:layout_constraintTop_toBottomOf="@id/ib_close_button" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/inputLayout_brand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="46dp"
    android:layout_marginTop="133dp"
    android:layout_marginEnd="31dp"
    android:theme="@style/Theme.Material3.Light"
    app:endIconDrawable="@drawable/ic_custom_edittext_filter"
    app:endIconMode="custom"
    app:layout_constraintTop_toTopOf="parent">

    <EditText
      android:id="@+id/et_brand_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/background_fields_filter"
      android:inputType="none"
      app:simpleItems="@array/items" />
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
    style="@style/filterTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Price"
    app:layout_constraintStart_toStartOf="@id/ib_close_button"
    app:layout_constraintTop_toBottomOf="@id/inputLayout_brand" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/inputLayout_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="46dp"
    android:layout_marginTop="42dp"
    android:layout_marginEnd="31dp"
    android:theme="@style/Theme.Material3.Light"
    app:endIconDrawable="@drawable/ic_custom_edittext_filter"
    app:endIconMode="custom"
    app:layout_constraintTop_toBottomOf="@id/inputLayout_brand">

    <EditText
      android:id="@+id/et_price_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/background_fields_filter"
      android:inputType="none"
      app:simpleItems="@array/items" />
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
    style="@style/filterTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Size"
    app:layout_constraintStart_toStartOf="@id/ib_close_button"
    app:layout_constraintTop_toBottomOf="@id/inputLayout_price" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/inputLayout_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="46dp"
    android:layout_marginTop="42dp"
    android:layout_marginEnd="31dp"
    android:theme="@style/Theme.Material3.Light"
    app:endIconDrawable="@drawable/ic_custom_edittext_filter"
    app:endIconMode="custom"
    app:layout_constraintTop_toBottomOf="@id/inputLayout_price">

    <EditText
      android:id="@+id/et_size_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/background_fields_filter"
      android:inputType="none"
      app:simpleItems="@array/items" />
  </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>