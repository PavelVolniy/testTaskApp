<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/colorPrimary">

  <TextView
    android:id="@+id/tv_explorer_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="Explorer"
    android:fontFamily="@font/mark_pro_bolt"
    android:textColor="@color/baseWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

  <ImageView
    android:layout_marginEnd="7dp"
    android:layout_marginTop="7dp"
    app:layout_constraintEnd_toStartOf="@+id/tv_explorer_button"
    app:layout_constraintTop_toTopOf="@+id/tv_explorer_button"
    android:src="@drawable/ic_explorer_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>